<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:id="@+id/profile"
    android:background="@color/white">

     <!--TODO: Update blank -->
    ?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity">



        <RelativeLayout
            android:id="@+id/rlimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/editprof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:gravity="end"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:textSize="18dp"
                android:padding="8dp"
                android:textColor="@color/colorAccent"
                />
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imageprofile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_account_circle_black_profile_24dp"

                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#e0e1df"
                app:civ_shadow_radius="10" />

            <TextView
                android:id="@+id/profilename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageprofile"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/profileEid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profilename"
                android:gravity="center_horizontal"

                android:textColor="#f59918" />

            <TextView
                android:id="@+id/roletxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileEid"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/gendertxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/roletxt"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/mobtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gendertxt"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/vrfytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobtxt"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="10dp"
                android:background="@drawable/ucorner"

                android:textColor="#0000ff" />


            <Button
                android:id="@+id/sign_out"
                style="?android:textAppearanceSmall"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vrfytxt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"

                android:background="@drawable/ucorner2"

                android:backgroundTint="@color/colorPrimaryDark"
                android:text="sign out"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>