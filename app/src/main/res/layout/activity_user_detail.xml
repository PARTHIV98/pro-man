        <EditText
            android:id="@+id/pname"
            android:layout_width="match_parent"
            android:layout_height="43dp"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/ucorner"
            android:hint="Enter name"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            android:paddingStart="5dp"

            android:textColor="#ffbb33" />

        <EditText
            android:id="@+id/pEid"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_below="@+id/pname"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="Email"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:paddingStart="5dp"
            android:background="@drawable/ucorner"

            android:textColor="#060606" />
        <Spinner
            android:id="@+id/pGender"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_below="@+id/pEid"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="Gender"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:paddingStart="5dp"
            android:background="@drawable/ucorner"
            android:entries="@array/android_dropdown_arrays"
            android:textColor="#060606" />

        <EditText
            android:id="@+id/pMobileno"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_below="@+id/pGender"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="Mobile no."
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:paddingStart="5dp"
            android:background="@drawable/ucorner"

            android:textColor="#060606" />
        <EditText
            android:id="@+id/pRole"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_below="@+id/pMobileno"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="Role"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:paddingStart="5dp"
            android:background="@drawable/ucorner"

            android:textColor="#060606" />



        <android.support.v7.widget.CardView
            android:id="@+id/card_2"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_below="@+id/pRole"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:clickable="true"

            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_1"
            app:layout_constraintVertical_bias="0.29">

            <Button
                android:id="@+id/savebtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text="Save"

                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#F8F8F7"
                android:textSize="16sp"
                android:textStyle="bold"

                />
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>